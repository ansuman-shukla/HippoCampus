{
  "manifest_version": 3,
  "name": "HippoCampus",
  "version": "1.0",
  "description": "Your second brain",
  "icons": {
    "256": "HippoCampusLogo.png"
  },
  "permissions": [
    "scripting", 
    "activeTab",
    "tabs",
    "bookmarks",
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5173/*",
    "http://127.0.0.1:8000/*",
    "https://hippocampus-backend-vvv9.onrender.com/*",
    "https://magical-famous-emu.ngrok-free.app/*",
    "https://extension-auth.vercel.app/*",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html","error.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle Sidebar"
  }
}